<h1>Movies edit</h1>


<%= @movie %>

<form action="/movies/<%= @movie.id %>" method="POST">
	<%= token_tag %>
	<label for="title">Title: </label>
	<input type="text" name="title" value="<%= @movie.title %>">

	<label for="Description">Description: </label>
	<input type="text" name="description" value="<%= @movie.desc %>">

